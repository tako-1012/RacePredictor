{
  "name": "runmaster-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:comprehensive": "jest --testPathPattern=comprehensive",
    "test:responsive": "playwright test --grep='レスポンシブ'",
    "test:integration": "jest --testPathPattern=integration",
    "test:all": "jest --testPathPattern=comprehensive|responsive|integration",
    "type-check": "tsc --noEmit",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "e2e:chromium": "playwright test --project=chromium",
    "e2e:firefox": "playwright test --project=firefox",
    "e2e:webkit": "playwright test --project=webkit",
    "e2e:mobile": "playwright test --project='Mobile Chrome'",
    "e2e:report": "playwright show-report",
    "test:setup": "./scripts/setup-test-env.sh",
    "test:ci": "./scripts/test-ci.sh",
    "test:full": "npm run test:coverage && npm run e2e",
    "test:debug": "playwright test --debug",
    "test:auth": "playwright test --grep='認証'",
    "test:workout": "playwright test --grep='練習記録'",
    "test:dashboard": "playwright test --grep='ダッシュボード'",
    "test:csv": "playwright test --grep='CSV'",
    "test:accessibility": "playwright test --grep='アクセシビリティ'"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@hello-pangea/dnd": "^16.5.0",
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/forms": "^0.5.7",
    "@types/node": "^20.10.5",
    "@types/papaparse": "^5.3.16",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "axios": "^1.6.2",
    "chart.js": "^4.4.0",
    "chartjs-adapter-date-fns": "^3.0.0",
    "date-fns": "^2.30.0",
    "framer-motion": "^12.23.22",
    "lucide-react": "^0.544.0",
    "next": "^13.5.6",
    "papaparse": "^5.5.3",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.63.0",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-next": "13.5.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6"
  }
}
