# RacePredictor テスト環境設定

# データベース設定
DATABASE_URL=postgresql://admin:testpassword@localhost:5432/racepredictor_test
POSTGRES_DB=racepredictor_test
POSTGRES_USER=admin
DB_PASSWORD=testpassword

# セキュリティ設定
SECRET_KEY=test-secret-key-for-development-only
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# アプリケーション設定
APP_NAME=RacePredictor
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=test

# ログ設定
LOG_LEVEL=DEBUG
LOG_FORMAT=text

# ファイルアップロード設定
CSV_UPLOAD_MAX_SIZE=10485760  # 10MB
ALLOWED_ENCODINGS=utf-8,shift-jis,cp932,euc-jp

# テスト用設定
TEST_MODE=true
SKIP_AUTH=false
